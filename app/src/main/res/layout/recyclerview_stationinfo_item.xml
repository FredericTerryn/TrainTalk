<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:card_view="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
            android:id="@+id/cardview_rowlayout_container_cityinfo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            card_view:cardCornerRadius="5dp"
            card_view:cardBackgroundColor="@android:color/black">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ImageView
                    android:id="@+id/imageview_infoitem_thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="160dp"
                    android:clickable="true"
                    android:scaleType="fitXY" />


            <TextView
                    android:id="@+id/stationInfoItem_textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/imageview_rowlayout_thumbnail"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:paddingTop="20dp"
                    android:paddingBottom="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />

            <TextView
                    android:id="@+id/stationInfoItem_textView_delay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/textView"
                    android:paddingBottom="20dp"
                    android:paddingLeft="12dp"
                    android:paddingRight="10dp"
                    android:textColor="@android:color/white"
                    android:textSize="25dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>